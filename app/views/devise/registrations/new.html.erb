<h2>Sign up</h2>

<div  id="role" >
    <% [ 'Manager', 'Client', 'Person' ].each do |theme| %>
    <%=radio_button_tag 'theme',theme, (!params[:role].blank?&&params[:role]==theme) ? true : false, {:class => "role"}%>
      <%= theme.humanize %>
    <% end %>
</div><br/>
<%= devise_error_messages! %>


