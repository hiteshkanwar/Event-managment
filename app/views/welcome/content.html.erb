
<div style="background:#ffffff;padding:40px;min-height:400px;color:#000000;">
	<div id="content-main">
		<%= render 'content' %>
	</div>
	
	<div id="title-field" class="col-md-3"  style="display:none;" >
		<%=text_field_tag :title,'', :class=>"form-control"%>
	</div>
	
	<div id="description-field" class="col-md-3" style="display:none;"   >	
		<%=text_field_tag :description,'', :class=>"form-control"  %>
	</div>
	
</div>
<style type="text/css">
 #description-box:hover
 {
 	border:1px #000000 solid !important;
 }
 #title-box:hover
 {
 	border:1px #000000 solid !important;
 }
</style>
<script type="text/javascript">
	$(document).click(function (e)
	{
	    var container = $("#title");
	    var description = $("#description");
	    var container_box = $("#title-box");
	    var description_box = $("#description-box");
	    if ((!container_box.is(e.target) && container_box.has(e.target).length === 0) &&    
	    	(!description_box.is(e.target) && description_box.has(e.target).length === 0))
	    {
		    
             $.ajax({
	         	url: "/welcome/content?title="+container.val()+"&description="+  description.val()
	         });
		
		}

    });

    $(document).ready(function(){
	    $("#title-box").click(function(){
			 if ($("#title-box #add-title").length == 0){
				$("#title-box").html('<div id="add-title"><input id="title" name="title" type="text"></div>')
			 }
		});

		$("#description-box").click(function(){
			 if ($("#description-box #add-description").length == 0){
				$("#description-box").html('<div id="add-description"><input id="description" name="description" type="text"></div>')
			 }
		});

    });



</script>
