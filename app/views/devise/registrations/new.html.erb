<script type="text/javascript">

 $(".role").on("change", function(){
    var data = $(this).attr("value"); 
  $.ajax({

    url: '/welcome/manager_reg',
    data: {'role' : data},

    dataType: 'script'
  });

});
 
</script>

<div id="redio">
<%if params[:role]=="Manager"%>
    <%=render "welcome/manager_reg"%>
 <% elsif  params[:role]=="Client" %>
    <%=render "welcome/client"%>
 <% elsif  params[:role]=="Person" %>
    <%=render "welcome/person"%>
<%end%>
</div>

